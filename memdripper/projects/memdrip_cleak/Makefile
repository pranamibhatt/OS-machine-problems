CROSS  := arm-linux-gnueabi-
CC      := $(CROSS)gcc

SOURCES	:= $(wildcard *.c)
OBJECTS	:= $(SOURCES:.c=.o)


#INCLUDE	:= -I. -I$(PWD)/../memdrip_tmdbuffer/src/include
CFLAGS  := -g -Wall -rdynamic $(INCLUDE) 
#LDFLAGS :=  -L$(PWD)/../memdrip_tmdbuffer/build/ -ltmdbuffer

TARGET	:= mcleak

all :	$(TARGET)    

#$(TARGET):	$(OBJECTS)
#	$(CC) $(INCLUDE) $(CFLAGS) $(LDFLAGS) -o $(TARGET) $(OBJECTS)

$(TARGET):	$(OBJECTS)
	$(CC) $(CFLAGS) -o $(TARGET) $(OBJECTS)
 
clean:
	rm $(TARGET) $(OBJECTS) 


